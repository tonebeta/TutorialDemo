<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/md_amber_400</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <!-- It will cause style bugs on AutoCompleteTextView..
        <item name="android:autoCompleteTextViewStyle">@style/MyAutoCompleteStyle</item>
        -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationStyle</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyNavigationDrawerStyle">
        <item name="android:textSize">@dimen/font_text_size_m</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/actionbar_height</item><!-- item size in menu-->
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="MyTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/md_grey_50</item>
        <item name="android:textSize">@dimen/font_text_size_m</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/font_text_size_s</item>
        <item name="android:textColorHint">@color/transparent_half_white</item>
    </style>

    <!-- Toolbar Style -->
    <style name="MyToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/md_grey_50</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarNavigationStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:paddingTop">@dimen/padding_size_m</item>
        <item name="android:paddingBottom">@dimen/padding_size_m</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_text_size_m</item>
        <item name="android:textColor">@color/md_grey_50</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/md_amber_400</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="NumberPickerStyle">
        <item name="android:textSize">@dimen/font_text_size_m</item>
    </style>


    <style name="ActivityDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Tab_CommonStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">@dimen/padding_size_s</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabMaxWidth">@dimen/tab_layout_max_width</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabText_CommonStyle</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TabText_CommonStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/font_text_size_l</item>
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
