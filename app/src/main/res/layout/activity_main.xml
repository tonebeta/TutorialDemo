    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonebeta.tutorialdemo.UiMainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_instruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_disc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_text_size_xxl"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_size_xxl"/>

</FrameLayout>
